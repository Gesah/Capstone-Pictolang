{
  "emulators": {
    "functions": {
      "port": 5001,
      "region": "asia-southeast1"
    },
    "firestore": {
      "port": 8080,
      "host": "localhost"
    },
    "database": {
      "port": 9000,
      "host": "localhost"
    },
    "auth": {
      "port": 9099
    },
    "ui": {
      "enabled": true,
      "port": 5000
    }
  },
  "functions": [
    {
      "source": "function",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run lint-firestore"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "database": {
    "rules": "database.rules.json",
    "host": "localhost",
    "port": 9000
  }
}
